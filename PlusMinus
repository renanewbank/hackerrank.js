function plusMinus(arr) {
    let numNegativos = 0;
    let numPositivos = 0;
    let numZero = 0;
    
    for (let i = 0; i < arr.length ; i++){
        
        if (arr[i] < 0){
            numNegativos++
        } else if (arr[i] > 0){
            numPositivos++
        } else {
            numZero++
        }
        
    }   
    
       numNegativos = numNegativos / arr.length;
        numPositivos = numPositivos / arr.length;
        numZero = numZero / arr.length;
        
    console.log(numPositivos.toFixed(6));
    console.log(numNegativos.toFixed(6));
    console.log(numZero.toFixed(6));
}
